{
  "name": "zmine",
  "version": "0.2.4",
  "description": "GUI for mining Zcash.",
  "main": "index.js",
  "scripts": {
    "test": "npm run testsuite && npm run linter",
    "testsuite": "./node_modules/.bin/mocha test/* --recursive --exit",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec --exit",
    "linter": "xo",
    "start": "electron .",
    "package": "electron-packager .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/super3/zmine.git"
  },
  "author": "Shawn Wilkinson <me@super3.org> (http://super3.org)",
  "contributors": [
    "Shawn Wilkinson <me@super3.org> (http://super3.org)",
    "Monty Anderson <work@montyanderson.net> (https://montyanderson.net)"
  ],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/super3/zmine/issues"
  },
  "homepage": "https://github.com/super3/zmine#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "base58check": "^2.0.0",
    "bootstrap": "^4.1.1",
    "dotenv": "^5.0.1",
    "extract-zip": "^1.6.7",
    "got": "^8.3.1",
    "jquery": "^3.3.1",
    "mz": "^2.7.0",
    "popper.js": "^1.14.3",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.1",
    "del": "^3.0.0",
    "electron": "^1.8.7",
    "electron-builder": "^20.15.3",
    "electron-builder-squirrel-windows": "^20.15.0",
    "electron-packager": "^11.2.0",
    "ioredis": "^3.2.2",
    "istanbul": "^1.1.0-alpha.1",
    "koa": "^2.5.1",
    "koa-json": "^2.0.2",
    "koa-router": "^7.4.0",
    "mocha": "^5.2.0",
    "spectron": "^3.8.0",
    "supertest": "^3.1.0",
    "xo": "^0.21.1"
  },
  "xo": {
    "rules": {
      "no-await-in-loop": "off",
      "curly": "off",
      "capitalized-comments": "off",
      "no-new": "off"
    }
  },
  "build": {
    "appId": "zmine",
    "win": {
      "target": "squirrel"
    }
  }
}
